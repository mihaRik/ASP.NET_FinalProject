@model SingleBlogViewModel

@{
    ViewBag.Title = "SingleBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var blog = Model.SingleBlog;
}

@Html.Partial("_Navbar", Model)

@Html.Partial("_Breadcumb", "SingleBlog")

