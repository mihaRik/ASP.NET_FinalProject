                            <input type="search" name="search" class="form-control" placeholder="Search ...">
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>

                    <!-- Single Widget Area -->
                    <div class="single-widget-area catagories-widget mb-80">
                        <h5 class="widget-title">Categories</h5>

                        <!-- catagories list -->
                        <ul class="catagories-list">
                            @foreach (var item in Model.BlogCategories)
                            {
                                <li><a href="@item.BlogCategoryLink"><i class="fa fa-angle-double-right" aria-hidden="true"></i> @item.CategoryName</a></li>
                            }
                        </ul>
                    </div>

                    <!-- Single Widget Area -->
                    <div class="single-widget-area news-widget mb-80">
                        <h5 class="widget-title">Latest Blogs</h5>

                        @foreach (var item in Model.Blogs.Reverse().Take(4))
                        {
                            <!-- Single News Area -->
                            <div class="single-news-area d-flex">
                                <div class="blog-thumbnail">
                                    <img src="@item.BlogPhoto" alt="">
                                </div>
                                <div class="blog-content">
