@model SearchResultViewModel
@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Navbar", Model)

@Html.Partial("_Breadcumb", "Search result")


<div class="container">
    <div class="row">
        <div class="col-6 mx-auto text-center">
            <h2>Search request : @Model.Query</h2>
        </div>
    </div>
</div>
<hr />

<!-- Blog Posts Area Start -->
<div class="section-heading text-center">
    @if (Model.Blogs.Count() != 0)
    {
        <h2>Finded blogs</h2>
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Blogs)
                {
                <!-- Single Blog Post -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="single-blog-post mb-30">
                        <div class="post-thumbnail">
                            <a href="@item.BlogLink"><img src="@item.BlogPhoto" alt=""></a>
                        </div>
                        <div class="post-content">
                            <a href="@item.BlogLink" class="post-title">@item.Title</a>
                            <span class="post-date">@item.AddDate.ToLongDateString()</span>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    }
    else
    {
        <h2>No finded blogs</h2>
    }
</div>
<!-- Blog Posts Area End -->
